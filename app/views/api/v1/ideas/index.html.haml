.row
  .col-md-8.col-md-offset-2
    %h2.text-center Idea Box
    .well
      = bootstrap_form_tag url: '/ideas' do |f|
        = f.text_field :title, id: 'idea-title', placeholder: 'Idea Title', hide_label: true
        = f.text_area :body, id: 'idea-body', placeholder: 'Idea Body', hide_label: true
        = f.submit 'Create Idea', id: 'create-idea-button', class: 'pull-right btn btn-primary'
        .clearfix
      %br
      %input{ placeholder: 'Search', class: 'form-control', id: 'search-bar' }
      %br
      %table.table.table-hover#ideas-table
        %tr#headings
          %th Title
          %th Body
          %th Quality
          %th{colspan: 3}
            Actions

